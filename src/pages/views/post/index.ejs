<!-- views/post/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= post ? post.title : 'Publicación no encontrada' %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <!-- Aquí puedes incluir tus propios estilos CSS -->
</head>

<body class="bg-gray-100">
  <header class="bg-white"><%- include('../layouts/header'); %></header>
  <div class="container mx-auto p-6">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4">
        <div class="flex flex-row">
          <div class="w-1/2 mr-4">
            <!-- Avatar y nombre del autor -->
            <div class="flex items-center mb-4">
              <div
                class="w-10 h-10 rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-xl text-white font-bold">
                <%= userName.charAt(0).toUpperCase() %>
              </div>
              <div class="ml-4">
                <p class="font-bold text-lg text-gray-800">
                  <%= userName %>
                </p>
                <p class="text-sm text-gray-600">
                  <%= new Date(post.createdAt).toLocaleString() %>
                </p>

            </div>
                <div class="flex justify-between w-full px-4 pb-4">
                  <a href="/post">
                    <button class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-bold py-2 px-4 shadow-md">
                      Publicaciones
                    </button>                
                  </a>
                </div>

              
            </div>
            <!-- Título de la publicación -->
            <h2 class="text-2xl font-bold text-gray-900 mb-4 break-words">
              <%= post.title %>
            </h2>
            <p class="text-gray-700 mb-4">
              <%= post.content %>
            </p>
            <div class="rounded-lg overflow-hidden mb-4">
              <img src="<%= post.image %>" alt="<%= post.title %>" class="h-60 w-full object-cover rounded-lg" />
            </div>
          </div>

          <div class="w-1/2 border-l border-gray-400 pl-4">
            <div class="border-t border-gray-400 pt-4 bg-gray-50 p-4 rounded-lg shadow-md">
              <h2 class="text-lg font-semibold text-gray-900 mb-2">Comentarios</h2>
              <% if (comments.length> 0) { %>
                <% for (const comment of comments) { %>
                  <div class="flex items-center mb-4 bg-gray-100 rounded-lg shadow-sm">
                    <div class="w-8 h-8 rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-lg text-white font-bold">
                      C
                    </div>
                    <div class="flex flex-col ml-4">
                      <p class="text-base font-semibold text-black">  <%= userNames[comment.idUsuario] %>
                      </p>
                      <p class="text-sm text-gray-700">  <%= comment.comentario %>
                      </p>
                    </div>
                    
                  </div>
                  
                  <% } %>
                    <% } else { %>
                      <p class="text-gray-500 text-sm">Aún no hay comentarios.</p>
                      <% } %>
            </div>
          </div>
        </div>



        </form>
      </div>
    </div>
  </div>
  </div>
</body>

</html>
<script>